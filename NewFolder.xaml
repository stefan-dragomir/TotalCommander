<Window x:Name="WindowNewFolder" x:Class="TotalCommander.NewFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TotalCommander"
        mc:Ignorable="d"
        Title="NewFolder" Height="130" Width="500" MinWidth="500" MinHeight="130" MaxHeight="130" MaxWidth="500">
	<StackPanel x:Name="pnlContainer" Margin="0,0,0,0">
		<WrapPanel x:Name="pnlTop" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
			<Label x:Name="lblNewFolder" Content="New Folder Name:" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="30" Margin="0,0,10,0"/>
			<TextBox x:Name="txtNewFolderName" HorizontalAlignment="Center" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="300" Margin="10,0,0,0"/>
		</WrapPanel>
		<WrapPanel x:Name="pnlBottom" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Button x:Name="btnCancel" Content="Cancel" Width="100" Height="30" Margin="0,0,20,0" Click="btnCancel_Click"/>
			<Button x:Name="btnOK" Content="Ok" Width="100" Height="30" Margin="20,0,0,0" Click="btnOK_Click"/>
		</WrapPanel>
	</StackPanel>
</Window>
